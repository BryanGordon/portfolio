---
import Bakery from '/public/bakery2.webp'
import { Image } from 'astro:assets'
import Icon from '/skillsIcons.svg#javascript'
import Projects from '../mocks/projects.json'
import Test from '../mocks/projects2.json'

const { data }: number | any = Astro.props

const project = Projects[data]
const info = Test[0]

function trying() {
  for (let i = 0; i < 3; i++) {
    console.log(info.techs[i])
  }
}

trying()
---

<article>
  <header>
    <div class="container-image">
      <img class="image-style" src={project.imageProject} alt={project.projectAlt} />
    </div>
  </header>

  <div class="container-info">
    <h1>{project.titleProject}</h1>
    <h4>Description</h4>
    <p>{project.descriptionProject}</p>
  </div>

  <div class="container-tech">
    <h4>Tecnologias</h4>
    <article>
      {
        info.techs.map((tech) => (
          <svg width="40px" height="40px">
            <use xlink:href={`/skillsIcons.svg#${tech}`}/>
      </svg>
        ))
      }
      <svg width="40px" height="40px">
        <use xlink:href={Icon}/>
      </svg>
      <svg width="40px" height="40px">
        <use xlink:href={Icon}/>
      </svg>
      <svg width="40px" height="40px">
        <use xlink:href={Icon}/>
      </svg>
    </article>
  </div>

</article>

<style>
  .container-info {
    width: 80dvw;
    margin: 0px auto 50px;

    & h4 {
      margin-top: 50px;
    }
  }

  h1 {
    text-align: center;
    color: #7e7efb;
  }

  h4 {
    color: #8b8bffdc;
  }

  p {
    text-wrap: wrap;
    color: #EDEDFC;
  }

  .container-tech {
    width: 80dvw;
    margin: 0 auto 60px;

    & article {
      display: flex;
      gap: 15px;
      justify-content: center;
    }

    & h4 {
      margin-bottom: 40px;
    }
  }

  .container-image {
    width: 80dvw;
    margin: 10px auto 40px;
  }

  .image-style {
    width: 100%;
    height: 100%;
    aspect-ratio: 16/9;
  }

  p {
    line-height: 1.6;
  }


</style>