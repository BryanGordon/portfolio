---
import Projects from '../mocks/projects.json'

const { data }: number | any = Astro.props

const project = Projects[data]
---

<article>
  <header>
    <div class="container-image">
      <img class="image-style" src={project.imageProject} alt={project.projectAlt} />
    </div>
  </header>

  <div class="container-info">
    <h1>{project.titleProject}</h1>
    <h4>Description</h4>
    <p>{project.shortDescription}</p>
  </div>

  <div class="container-tech">
    <h4>Tecnologias</h4>
    <article>
      {
        project.techs.map((tech) => (
          <svg width="40px" height="40px">
            <use xlink:href={`/skillsIcons.svg#${tech}`}/>
      </svg>
        ))
      }
    </article>
  </div>

</article>

<style>
  .container-info {
    width: 80dvw;
    margin: 0px auto 50px;

    & h4 {
      margin-top: 50px;
    }
  }

  h1 {
    text-align: center;
    color: #7e7efb;
    font-size: 42px;
  }

  h4 {
    color: #8b8bffdc;
    font-size: 24px;
  }

  p {
    text-wrap: wrap;
    color: #EDEDFC;
  }

  .container-tech {
    width: 80dvw;
    margin: 0 auto 60px;

    & article {
      display: flex;
      gap: 25px;
      justify-content: center;
    }

    & h4 {
      margin-bottom: 40px;
    }
  }

  .container-image {
    width: 80dvw;
    margin: 10px auto 40px;
  }

  .image-style {
    width: 100%;
    aspect-ratio: 3 / 2;
    object-fit: contain;
  }

  p {
    line-height: 1.6;
  }

</style>