  article {
    padding-block: 15px;
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    gap: 20px;
    place-items: center;
    border-radius: 20px;
    background: radial-gradient(#262737 0%, #272922 90%);
  }
  
  .icon-card {
    display: flex;
